<%= form_with url: url, method: :get do |f| %>
  <div class="mb-3" data-controller="autocomplete" data-autocomplete-url-value="/songs/autocomplete" role="combobox">
    <div class="input-group-custom">
      <%= f.text_field :search, class: 'form-control', value: params[:search], data: { autocomplete_target: 'input' }, placeholder: t('defaults.search_word') %><br>
      <%= f.select :cover_eq, Song.covers.keys.map.with_index { |k, i| [k, i] }, { include_blank: '選択しない' }, class: 'form-search-select' %>
      <div class="input-group-append">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </div>
    <ul class="list-group" data-autocomplete-target="results"></ul>
  </div>
<% end %>