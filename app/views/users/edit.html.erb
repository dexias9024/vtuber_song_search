<div class="container">
  <div class="row">
    <div class="mt-3">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1><%= t('.title') %></h1>
        <%= form_with model: current_user, url: user_path(current_user), local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :icon %>
              <%= f.file_field :icon, onchange: 'previewFileWithId(preview)', class: 'form-control', accept: 'image/*' %>
              <%= f.hidden_field :icon_cache %>
            </div>
            <div class='mt-3 mb-3'>
              <%= image_tag current_user.icon.url,
                            class: 'rounded-circle',
                            id: 'preview',
                            size: '100x100' %>
            </div>
            <div class="form-group">
              <%= f.label :profile %>
              <%= f.text_area :profile, class: 'form-control', rows: 5, cols: 40 %>
            </div>
            <%= f.submit class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-3"></div>
</div>

<script>
  function previewFileWithId(id) {
    const target = this.event.target;
    const file = target.files[0];
    const reader  = new FileReader();
    reader.onloadend = function () {
        preview.src = reader.result;
    }
    if (file) {
        reader.readAsDataURL(file);
    } else {
        preview.src = '';
    }
  }
</script>