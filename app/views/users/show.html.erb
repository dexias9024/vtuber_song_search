<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= t('users.name') %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row">
            <%= t('users.icon') %>
          </th>
          <td>
            <div class='mt-3 mb-3'>
            <%= image_tag @user.icon.url,
                          class: 'rounded-circle',
                          id: 'preview',
                          size: '100x100' %>
            </div>
          </td>
        </tr>
        <tr>
          <th scope="row"><%= t('users.profile') %></th>
          <td><%= @user.profile %></td>
        </tr>
      </table>
    </div>
  </div>
</div>