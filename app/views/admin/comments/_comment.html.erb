<tr>
  <td>
    <%= comment.id %>
  </td>
  <td>
    <%= truncate(comment.content, length: 20) %>
  </td>
  <td>
    <%= comment.song.title %>
  </td>
  <td>
    <%= comment.user_id %>
  </td>
  <td>
    <%= comment.user.name %>
  </td>
  <td>
    <%= l comment.created_at, format: :long %>
  </td>
  <td class="d-flex">
    <%= button_to t('defaults.delete'), admin_comment_path(comment), method: :delete, data: { turbo_confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
  </td>
</tr>