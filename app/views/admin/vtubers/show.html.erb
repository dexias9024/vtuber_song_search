<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="d-flex">
        <%= link_to t('defaults.edit'), edit_admin_vtuber_path(@vtuber), class: 'btn btn-success' %>
        <%= button_to t('defaults.delete'), admin_vtuber_path(@vtuber), method: :delete, data: { turbo_confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"style="width: 150px;">Id</th>
          <td><%= @vtuber.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('.channel_name') %></th>
          <td><%= @vtuber.channel_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('.channel_url') %></th>
          <td><%= @vtuber.channel_url %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('.name') %></th>
          <td><%= @vtuber.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('.overview') %></th>
          <td><%= @vtuber.overview %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('.instrument') %></th>
          <td>
            <% if @vtuber.instruments.any? %>
              <%= @vtuber.instruments.map(&:name).join(', ') %>
            <% else %>
            <%= t('.not_instrument') %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th scope="row"><%= t('.created_at') %></th>
          <td><%= l @vtuber.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>