          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admin_members_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-building"></i>
            <%= t('admin.sidebar.member') %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_admin_instrument_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-guitar"></i>
            <%= t('admin.sidebar.instrument') %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admin_comments_path, class: "nav-link" do %>
            <i class="nav-icon far fa-comments"></i>
            <%= t('admin.sidebar.comment') %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admin_inquiries_path, class: "nav-link" do %>
            <i class="nav-icon far fa-envelope"></i>
            <%= t('admin.sidebar.inquiry') %>
