<div class="container">
  <div class="row">
    <div class="mt-3">
      <h1 class="app-title"><%= t('.title') %></h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col"><%= t('.icon') %></th>
            <th scope="col"><%= t('.channel_name') %></th>
            <th scope="col"><%= t('.channel_url') %></th>
            <th scope="col"><%= t('.name') %></th>
            <th scope="col"><%= t('.member') %></th>
            <th scope="col"><%= t('.instrument') %></th>
          </tr>
        </thead>
        <tbody>
          <% @vtubers.each do |vtuber| %>
            <tr>
              <td><%= image_tag vtuber.icon, class: 'brand-image img-circle elevation-3', style: 'width: 50px; height: 50px;' %></td>
              <td><%= link_to vtuber.channel_name, vtuber_path(vtuber) %></td>
              <td><%= vtuber.channel_url %></td>
              <td><%= vtuber.name %></td>
              <td><%= vtuber.member.name %></td>
              <td>
                <% if vtuber.instruments.any? %>
                  <%= vtuber.instruments.map(&:name).join(', ') %>
                <% else %>
                  <%= t('.not_instrument') %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="item__paginate">
        <%= paginate @vtubers %>
      </div>
    </div>
  </div>
</div>